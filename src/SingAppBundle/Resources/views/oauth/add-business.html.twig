{% extends '@SingApp/layouts/base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
        <div class="products">
            <div class="messages">
                {% if form.vars.method == "PUT" %}
                    <h2 style="text-align: center">Edit business</h2>
                {% else %}
                    <h2 style="text-align: center">Add new business</h2>
                {% endif %}
                <div class="card add-business-block">
                    {% include '@SingApp/modal/busines-info-modal.html.twig' with {'form': form} %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
